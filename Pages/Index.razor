@page "/"
@using info_app.Data
@inject QuestaoService service
@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EnemQuest</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ZVr5A5B6Z1Gu5K5Cuu3Y6xERjL2uPdhl8LrPS4OYjZwKAxSt1veZ3zj3VxAAsjdu" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #343a40;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.5rem;
            color: #fff;
        }

        .navbar-dark .navbar-toggler-icon {
            border-color: #fff;
        }

        .navbar-toggler {
            border: none;
        }

        .navbar-nav .nav-link {
            color: #fff;
            transition: color 0.3s;
        }

        .navbar-nav .nav-link:hover {
            color: #007bff;
        }

        .sidebar {
            height: 100vh;
            position: fixed;
            top: 56px;
            left: 0;
            width: 240px;
            padding-top: 1rem;
            background-color: #343a40;
            color: #fff;
            z-index: 1; /* Ajuste a ordem de empilhamento */
        }

        .sidebar-heading {
            font-size: 1.2rem;
            color: #fff;
        }

        .sidebar .nav-link {
            color: #adb5bd;
        }

        .sidebar .nav-link:hover {
            color: #fff;
        }

        .content {
            margin-top: 56px; /* Ajuste para a barra de navegação no topo */
            margin-left: 240px; /* Ajuste para a barra de menu lateral */
            padding: 2rem;
        }

        h1, h2, h3 {
            color: #495057;
        }

        p {
            color: #6c757d;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">EnemQuest</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cadastro">Registrar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="sidebar-sticky">
                    <h5 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Menu</span>
                    </h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/questionario">
                                Banco de Questões
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/simulado">
                                Simulado
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">
                                Administrador
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 content">
                <h1 class="mt-5">Bem-vindo ao EnemQuest</h1>
                <p class="lead">Este é um aplicativo de perguntas do Enem.</p>
                <!-- Conteúdo da sua página vai aqui -->
            </main>
        </div>
    </div>

    
</body>
</html>
